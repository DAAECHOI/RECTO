<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mypage.ProfileFragmentMineDetail">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/mine_photo_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <!-- list button -->
                <Button
                    android:id="@+id/mine_photo_card_list_btn"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="@string/list"
                    android:textColor="@color/white"
                    android:fontFamily="@font/eulyoo1945_semibold"
                    app:backgroundTint="@color/brown"
                    app:cornerRadius="10dp"
                    tools:ignore="RelativeOverlap" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    tools:ignore="RelativeOverlap,UseCompoundDrawables">

                    <!-- private or public -->
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="2dp"
                        android:src="@drawable/lock"
                        android:contentDescription="@string/lock" />

                    <TextView
                        android:id="@+id/mine_photo_card_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/photo_card"
                        android:textColor="@color/brown"
                        android:textSize="30sp"
                        android:fontFamily="@font/eulyoo1945_semibold" />

                </LinearLayout>

                <!-- information (dialog) -->
                <ImageView
                    android:id="@+id/info_dialog"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_margin="5dp"
                    android:src="@drawable/question"
                    android:contentDescription="@string/question" />

            </RelativeLayout>

            <TextView
                android:id="@+id/card_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text=""
                android:textColor="@color/black"
                android:textSize="20sp"
                android:fontFamily="@font/eulyoo1945_semibold" />

            <FrameLayout
                android:id="@+id/card_frameLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_gravity="center">

                <ImageView
                    android:id="@+id/iv_success"
                    android:layout_width="183dp"
                    android:layout_height="288dp"
                    android:contentDescription="@string/private_card"
                    android:src="@drawable/card_layout" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="14dp"
                    android:layout_marginVertical="13dp"
                    android:src="@drawable/card_logo"
                    android:contentDescription="@string/card_logo" />

                <TextView
                    android:id="@+id/card_id"
                    android:layout_width="55dp"
                    android:layout_height="15dp"
                    android:text=""
                    android:textSize="10dp"
                    android:textColor="@color/black"
                    android:layout_gravity="end"
                    android:layout_marginHorizontal="12dp"
                    android:layout_marginVertical="18dp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/card_image_detail"
                        android:layout_width="152dp"
                        android:layout_height="203dp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="10dp"
                        android:contentDescription="@string/photo_card"
                        android:src="@drawable/card_image"
                        android:scaleType="centerCrop"/>

                    <TextView
                        android:id="@+id/tv_phrases"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:textColor="@color/black"
                        android:fontFamily="@font/eulyoo1945_semibold"
                        android:layout_marginBottom="15dp" />

                </LinearLayout>

            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <Button
                    android:id="@+id/download_button"
                    android:layout_width="120dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="25dp"
                    android:text="@string/download"
                    android:textColor="@color/white"
                    android:fontFamily="@font/eulyoo1945_semibold"
                    app:backgroundTint="@color/brown"
                    app:cornerRadius="10dp" />

                <Button
                    android:id="@+id/delete_button"
                    android:layout_width="120dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="25dp"
                    android:text="@string/delete"
                    android:textColor="@color/white"
                    android:fontFamily="@font/eulyoo1945_semibold"
                    app:backgroundTint="@color/red"
                    app:cornerRadius="10dp" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>