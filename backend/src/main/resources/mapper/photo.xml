<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ssafy.recto.dao.PhotoDao">
	<select id="getPhoto" parameterType="int" resultType="Photo">
		select *
		from photo
		where photo_seq = #{photo_seq}
	</select>

	<select id="getPhotoList" parameterType="int" resultType="Photo">
		select *
		from photo
		where user_seq = #{user_seq}
	</select>

	<insert id="insertPhoto" parameterType="Photo">
		insert into
		photo(photo_seq, user_seq, photo_id, photo_date, video_url, pharse,
		photo_pwd, design, publication)
		values(#{photo_seq}, #{user_seq},
		#{photo_id}, #{photo_date}, #{video_url}, #{pharse}, #{photo_pwd},
		#{design}, #{publication})
	</insert>

	<update id="modifyPhoto" parameterType="Photo">
		update photo
		set
		#{video_url}, #{pharse}, #{photo_pwd}, #{design}, #{publication}
		where photo_seq = #{photo_seq}
	</update>

	<delete id="deletePhoto" parameterType="int">
		delete from photo
		where photo_seq = #{photo_seq}
	</delete>

</mapper>